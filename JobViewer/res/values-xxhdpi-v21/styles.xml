<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat">

        <!-- Main theme colors -->
        <!-- your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/red</item>
        <!-- darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/red</item>
        <!-- theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/saffron</item>
        <item name="android:navigationBarColor">@color/red</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemTheme</item>
        <item name="android:spinnerStyle">@style/SpinnerTheme</item>
        <item name="android:dropDownSpinnerStyle">@style/SpinnerTheme.DropDown</item>
        <item name="android:spinnerDropDownItemStyle">@style/DropDownItemSpinnerTheme</item>
    </style>

    <style name="CustomCheckBox" parent="android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/multi_checkbox_selector</item>
        <item name="colorAccent">#E91E63</item>
        <item name="android:colorAccent">#E91E63</item>
    </style>

</resources>