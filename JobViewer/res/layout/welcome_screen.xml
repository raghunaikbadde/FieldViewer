<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.jobviewer.MainActivity" >

    <include layout="@layout/job_viewer_title_template" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/welcome_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dialog_detail_bottom_margin95"
                android:layout_marginTop="@dimen/dialog_detail_top_margin80"
                android:text="@string/welcome"
                android:textColor="@color/red"
                android:textSize="@dimen/red_lato_bold_big90" />

            <TextView
                android:id="@+id/please_clock_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/please_clock_in_to_begin"
                android:textColor="@color/black"
                android:textSize="@dimen/black_lato_regular_small55" />

            <Button
                android:id="@+id/clock_in"
                android:layout_width="@dimen/clock_in_button_width628"
                android:layout_height="@dimen/user_detail_height223"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/actionbar_bottom_margin85"
                android:background="@drawable/red_background"
                android:text="@string/clock_in_str"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/white_lato_regular_big79" />

            <ImageView
                android:id="@+id/shout_about_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/call_customer_button_height180"
                android:layout_marginTop="@dimen/dialog_header_height242"
                android:src="@drawable/shout_out_icon" />
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/copyright_bottom_template" />

</LinearLayout>