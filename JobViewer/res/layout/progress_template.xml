<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/progress_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/check_out_text"
    android:layout_marginLeft="@dimen/dialog_detail_top_margin80"
    android:layout_marginRight="@dimen/dialog_detail_top_margin80"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/progress_step_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/progress_step"
        android:textColor="@color/black"
        android:textSize="@dimen/white_lato_bold_small50" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_button_top_margin70"
        android:layout_marginLeft="@dimen/spinner_top_margin25"
        android:progress="70"
        android:progressDrawable="@drawable/progressbar" />

</LinearLayout>