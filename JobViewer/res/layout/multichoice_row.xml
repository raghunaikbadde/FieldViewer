<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/checkout_checkbox_left_margin158"
        android:layout_marginRight="@dimen/white_lato_regular_small40"
        android:button="@drawable/checkbox_selector"
        android:clickable="false"
        android:focusable="false"
        android:paddingBottom="@dimen/white_lato_regular_small40"
        android:paddingLeft="@dimen/template_spacing27"
        android:paddingTop="@dimen/white_lato_regular_small40" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/blockage"
        android:textColor="@color/black"
        android:textSize="@dimen/black_lato_regular_small55" />

</LinearLayout>