<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottombutton"
        android:layout_alignParentTop="true"
        android:isScrollContainer="false" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/success_detail_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/success_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/white_lato_regular_big79"
                        android:layout_marginTop="@dimen/white_lato_bold_small50"
                        android:text="@string/success"
                        android:textColor="@color/red"
                        android:textSize="@dimen/red_lato_regular_extra_large176" />

                    <TextView
                        android:id="@+id/vistec_job_number_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/vistec_job_number"
                        android:textColor="@color/black"
                        android:textSize="@dimen/title_text_size70" />

                    <TextView
                        android:id="@+id/vistec_number_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/progressbar_top_margin58"
                        android:layout_marginTop="@dimen/progressbar_top_margin58"
                        android:gravity="center_horizontal"
                        android:text="@string/vistec_number"
                        android:textColor="@color/black"
                        android:textSize="@dimen/progressbar_top_margin58" />

                    <TextView
                        android:id="@+id/work_photos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/white_lato_regular_big79"
                        android:layout_marginRight="@dimen/white_lato_regular_big79"
                        android:gravity="center_horizontal"
                        android:text="@string/work_and_photos"
                        android:textColor="@color/black"
                        android:textSize="@dimen/black_lato_regular_medium45" />

                    <TextView
                        android:id="@+id/tap_done_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/white_lato_regular_big79"
                        android:layout_marginRight="@dimen/white_lato_regular_big79"
                        android:layout_marginTop="@dimen/progressbar_top_margin58"
                        android:gravity="center_horizontal"
                        android:text="@string/tap_done_to_continue"
                        android:textColor="@color/black"
                        android:textSize="@dimen/black_lato_regular_small55" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottombutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/white_lato_regular_big79"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/done_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height150"
                android:background="@drawable/red_background"
                android:text="@string/done"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/dialog_black_lato_regular_small60" />
        </LinearLayout>

        <include layout="@layout/copyright_bottom_template" />
    </LinearLayout>

</RelativeLayout>