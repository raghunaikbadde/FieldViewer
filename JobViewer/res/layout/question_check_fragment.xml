<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottombutton"
        android:layout_alignParentTop="true"
        android:isScrollContainer="false" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/screenTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/white_lato_regular_small40"
                    android:layout_marginRight="@dimen/white_lato_regular_small40"
                    android:layout_marginTop="@dimen/white_lato_bold_small50"
                    android:drawableLeft="@drawable/logo_top"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="@string/non_excavation_risk_str"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_text_size70" />

                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/screenTitle"
                    android:layout_marginBottom="@dimen/grey_lato_regular_small35"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="@dimen/grey_lato_regular_small35"
                    android:background="#CCCCCC" />

                <LinearLayout
                    android:id="@+id/progress_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line1"
                    android:layout_marginLeft="@dimen/dialog_detail_top_margin80"
                    android:layout_marginRight="@dimen/dialog_detail_top_margin80"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/progress_step_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/tmp_progress_step"
                        android:textColor="@color/black"
                        android:textSize="@dimen/white_lato_bold_small50" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dialog_button_top_margin70"
                        android:layout_marginLeft="@dimen/spinner_top_margin25"
                        android:progress="5"
                        android:progressDrawable="@drawable/progressbar" />
                </LinearLayout>

                <TextView
                    android:id="@+id/questionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/progress_layout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/margin_11_dp"
                    android:layout_marginLeft="@dimen/dialog_detail_top_margin80"
                    android:layout_marginRight="@dimen/dialog_detail_top_margin80"
                    android:layout_marginTop="@dimen/black_lato_regular_medium45"
                    android:text="@string/set_up_on_arrival_str"
                    android:textColor="@color/red"
                    android:textSize="@dimen/title_text_size70" />

                <TextView
                    android:id="@+id/question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/questionTitle"
                    android:layout_marginBottom="@dimen/actionbar_bottom_margin85"
                    android:layout_marginLeft="@dimen/dialog_detail_top_margin80"
                    android:layout_marginRight="@dimen/dialog_detail_top_margin80"
                    android:text="@string/capture_the_setup_str"
                    android:textColor="@color/black"
                    android:textSize="@dimen/black_lato_regular_small55" />

                <CheckBox
                    android:id="@+id/radio_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/question"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="@dimen/checkout_checkbox_left_margin158"
                    android:button="@drawable/checkbox_selector"
                    android:drawablePadding="@dimen/template_spacing27"
                    android:paddingLeft="@dimen/template_spacing27"
                    android:text="@string/setup_complete"
                    android:textColor="@color/black"
                    android:textSize="@dimen/progressbar_top_margin58" />

                <TextView
                    android:id="@+id/tapNextToContinue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/question"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="@dimen/checkout_checkbox_left_margin158"
                    android:button="@drawable/checkbox_selector"
                    android:drawablePadding="@dimen/template_spacing27"
                    android:paddingLeft="@dimen/template_spacing27"
                    android:text="@string/tapNextToContinueStr"
                    android:textColor="@color/black"
                    android:textSize="@dimen/progressbar_top_margin58"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottombutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/white_lato_regular_big79"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height150"
            android:layout_weight="20"
            android:background="@drawable/dialog_grey_button"
            android:text="@string/save"
            android:textAllCaps="false"
            android:textColor="@color/lighter_grey"
            android:textSize="@dimen/dialog_black_lato_regular_small60" />

        <Button
            android:id="@+id/space"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:visibility="invisible" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height150"
            android:layout_weight="20"
            android:background="@drawable/red_background"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/dialog_black_lato_regular_small60" />
    </LinearLayout>

</RelativeLayout>