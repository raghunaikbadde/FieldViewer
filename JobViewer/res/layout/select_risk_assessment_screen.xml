<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:isScrollContainer="false" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/risk_assess_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/white_lato_regular_small40"
                    android:layout_marginRight="@dimen/white_lato_regular_small40"
                    android:layout_marginTop="@dimen/white_lato_bold_small50"
                    android:drawableLeft="@drawable/logo_top"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="@string/risk_assessment_str"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_text_size70" />

                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/risk_assess_text"
                    android:layout_marginBottom="@dimen/grey_lato_regular_small35"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="@dimen/grey_lato_regular_small35"
                    android:background="#CCCCCC" />

                <TextView
                    android:id="@+id/number_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/black_lato_regular_small55"
                    android:text="@string/vistec_number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/progressbar_top_margin58" />

                <LinearLayout
                    android:id="@+id/progress_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/number_text"
                    android:layout_marginLeft="@dimen/dialog_detail_top_margin80"
                    android:layout_marginRight="@dimen/dialog_detail_top_margin80"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/progress_step_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/progress_step"
                        android:textColor="@color/black"
                        android:textSize="@dimen/white_lato_bold_small50" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dialog_button_top_margin70"
                        android:layout_marginLeft="@dimen/spinner_top_margin25"
                        android:progress="5"
                        android:progressDrawable="@drawable/progressbar" />
                </LinearLayout>

                <TextView
                    android:id="@+id/info_message_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/progress_layout"
                    android:layout_marginBottom="@dimen/progressbar_top_margin58"
                    android:layout_marginLeft="@dimen/white_lato_regular_big79"
                    android:layout_marginRight="@dimen/white_lato_regular_big79"
                    android:layout_marginTop="@dimen/edit_text_bottom_margin87"
                    android:text="@string/select_the_type_str"
                    android:textColor="@color/black"
                    android:textSize="@dimen/black_lato_regular_small55" />

                <RadioGroup
                    android:id="@+id/riskAssessmentOption"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/info_message_text"
                    android:layout_marginLeft="@dimen/checkout_checkbox_left_margin158" >

                    <RadioButton
                        android:id="@+id/checkBox1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/screen_border_margin80"
                        android:layout_marginLeft="@dimen/checkout_checkbox_left_margin158"
                        android:button="@drawable/checkbox_selector"
                        android:paddingLeft="@dimen/template_spacing27"
                        android:text="@string/non_excavation_str"
                        android:textColor="@color/black"
                        android:textSize="@dimen/progressbar_top_margin58" />

                    <RadioButton
                        android:id="@+id/checkBox2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/checkout_checkbox_left_margin158"
                        android:button="@drawable/checkbox_selector"
                        android:paddingLeft="@dimen/template_spacing27"
                        android:text="@string/excavation_str"
                        android:textColor="@color/black"
                        android:textSize="@dimen/progressbar_top_margin58" />
                </RadioGroup>

                <TextView
                    android:id="@+id/user_email_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/riskAssessmentOption"
                    android:layout_marginBottom="@dimen/button_top_margin345"
                    android:layout_marginLeft="@dimen/left_margin_150dp"
                    android:text="@string/breaking_ground"
                    android:textColor="@color/shallow_grey"
                    android:textSize="@dimen/user_icon_left_padding46" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/user_email_text"
        android:layout_marginBottom="@dimen/white_lato_regular_big79" >

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/white_lato_regular_big79"
            android:layout_marginRight="@dimen/white_lato_regular_big79"
            android:button="@drawable/checkbox_selector"
            android:gravity="center"
            android:paddingLeft="@dimen/template_spacing27"
            android:text="@string/remember_my_selection"
            android:textColor="@color/black"
            android:textSize="@dimen/progressbar_top_margin58" />

        <LinearLayout
            android:id="@+id/ll_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBox3"
            android:layout_marginLeft="@dimen/white_lato_regular_big79"
            android:layout_marginRight="@dimen/white_lato_regular_big79"
            android:layout_marginTop="@dimen/black_lato_regular_medium45" >

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height150"
                android:layout_weight="20"
                android:background="@drawable/dialog_grey_button"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textColor="@color/lighter_grey"
                android:textSize="@dimen/dialog_black_lato_regular_small60" />

            <Button
                android:id="@+id/space"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:visibility="invisible" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height150"
                android:layout_weight="20"
                android:background="@drawable/red_background"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/dialog_black_lato_regular_small60" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>