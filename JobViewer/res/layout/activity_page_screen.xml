<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.jobviewer.MainActivity" >

    <include layout="@layout/job_viewer_title_template" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:isScrollContainer="false" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/copyright_right_margin212"
                android:layout_marginLeft="@dimen/user_detail_left_spacing140"
                android:layout_marginRight="@dimen/user_detail_left_spacing140"
                android:layout_marginTop="@dimen/dialog_detail_top_margin80"
                android:background="@drawable/dark_grey_background" >

                <ImageView
                    android:id="@+id/user_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/user_icon_left_padding46"
                    android:src="@drawable/user_icon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/user_detail_height223"
                    android:layout_marginLeft="@dimen/user_icon_left_padding46"
                    android:layout_marginTop="@dimen/edit_box_stroke6"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/user_email_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spinner_top_margin25"
                        android:layout_marginTop="@dimen/email_top_margin21"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:shadowDx="1.5"
                        android:shadowDy="1.3"
                        android:shadowRadius="1.6"
                        android:singleLine="true"
                        android:text="@string/tmp_email_address"
                        android:textColor="@color/white"
                        android:textSize="@dimen/white_lato_bold_small50" />

                    <TextView
                        android:id="@+id/date_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/edit_error_stroke10"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:shadowDx="1.5"
                        android:shadowDy="1.3"
                        android:shadowRadius="1.6"
                        android:singleLine="true"
                        android:text="@string/tmp_date_time"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/grey_lato_regular_medium57" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/start"
                android:layout_width="match_parent"
                android:layout_height="@dimen/copyright_right_margin212"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/user_detail_left_spacing140"
                android:layout_marginRight="@dimen/user_detail_left_spacing140"
                android:layout_marginTop="@dimen/dialog_edit_top_margin35"
                android:background="@drawable/red_background"
                android:singleLine="true"
                android:text="@string/start_text"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/dialog_black_lato_regular_small60" />

            <Button
                android:id="@+id/check_out_vehicle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/user_detail_height223"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/user_detail_left_spacing140"
                android:layout_marginRight="@dimen/user_detail_left_spacing140"
                android:layout_marginTop="@dimen/dialog_edit_top_margin35"
                android:background="@drawable/grey_background"
                android:text="@string/check_out_vehicle"
                android:textAllCaps="false"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/dialog_black_lato_regular_small60" />

            <LinearLayout
                android:id="@+id/checked_out_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/user_detail_height223"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/user_detail_left_spacing140"
                android:layout_marginRight="@dimen/user_detail_left_spacing140"
                android:layout_marginTop="@dimen/dialog_edit_top_margin35"
                android:background="@drawable/grey_background"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/vehicleTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vehicleTitle"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/grey_lato_regular_medium57" />

                <TextView
                    android:id="@+id/vehicleRegistrationNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/edit_error_stroke10"
                    android:text="@string/vehicleTitle"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/grey_lato_regular_medium57" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/user_detail_left_spacing140"
                android:layout_marginRight="@dimen/user_detail_left_spacing140"
                android:layout_marginTop="@dimen/dialog_edit_top_margin35" >

                <Button
                    android:id="@+id/start_travel"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/start_break_button_height168"
                    android:layout_weight="20"
                    android:background="@drawable/imagebutton"
                    android:text="@string/start_travel"
                    android:textAllCaps="false"
                    android:textSize="@dimen/dialog_black_lato_regular_small60" />

                <Button
                    android:id="@+id/space"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/end_on_call"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/start_break_button_height168"
                    android:layout_weight="20"
                    android:background="@drawable/imagebutton"
                    android:text="@string/end_button"
                    android:textAllCaps="false"
                    android:textSize="@dimen/dialog_black_lato_regular_small60" />
            </LinearLayout>

            <ImageView
                android:id="@+id/shout_about_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/risk_ques_top_margin105"
                android:layout_marginTop="@dimen/white_lato_bold_small50"
                android:src="@drawable/shout_out_small_icon" />
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/copyright_bottom_template" />

</LinearLayout>