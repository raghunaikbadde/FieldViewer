                        <TextView
                            android:id="@+id/map_image_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spinner_bottom_margin30"
                            android:text="@string/add_map_annotation"
                            android:textColor="@color/white"
                            android:textSize="@dimen/progressbar_top_margin58" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
