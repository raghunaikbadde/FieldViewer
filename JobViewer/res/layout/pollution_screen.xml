<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/progressbar_top_margin58"
        android:layout_marginLeft="@dimen/white_lato_regular_small40"
        android:layout_marginRight="@dimen/white_lato_regular_small40"
        android:layout_marginTop="@dimen/white_lato_bold_small50"
        android:drawableLeft="@drawable/logo_top"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="@string/pollutionScreenTitle"
        android:textColor="@color/black"
        android:textSize="@dimen/title_text_size70" />

    <TextView
        android:id="@+id/number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_text"
        android:layout_centerHorizontal="true"
        android:text="@string/vistec_number"
        android:textColor="@color/black"
        android:textSize="@dimen/progressbar_top_margin58" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/number_text"
        android:layout_marginBottom="@dimen/grey_lato_regular_small35"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="@dimen/grey_lato_regular_small35"
        android:background="#CCCCCC" />

    <LinearLayout
        android:id="@+id/progress_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_marginLeft="@dimen/dialog_detail_top_margin80"
        android:layout_marginRight="@dimen/dialog_detail_top_margin80"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/progress_step_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/pollution_progress"
            android:textColor="@color/black"
            android:textSize="@dimen/white_lato_bold_small50" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_button_top_margin70"
            android:layout_marginLeft="@dimen/spinner_top_margin25"
            android:progress="70"
            android:progressDrawable="@drawable/progressbar" />
    </LinearLayout>

    <TextView
        android:id="@+id/pollutionTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress_layout"
        android:layout_marginBottom="@dimen/grey_lato_regular_medium57"
        android:layout_marginLeft="@dimen/red_lato_bold_big90"
        android:layout_marginRight="@dimen/red_lato_bold_big90"
        android:layout_marginTop="@dimen/grey_lato_regular_medium57"
        android:text="@string/pollution_detail"
        android:textColor="@color/blackColor"
        android:textSize="@dimen/progressbar_top_margin58" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottombutton"
        android:layout_below="@+id/pollutionTitle"
        android:isScrollContainer="false" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/pollutionToLandParent"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dialog_detail_top_margin80"
                    android:layout_marginRight="@dimen/dialog_detail_top_margin80"
                    android:orientation="vertical" >

                    <CheckBox
                        android:id="@+id/ptlCheckbox"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox_selector"
                        android:paddingLeft="@dimen/template_spacing27"
                        android:text="@string/pollution_to_land"
                        android:textColor="@color/black"
                        android:textSize="@dimen/progressbar_top_margin58" />

                    <LinearLayout
                        android:id="@+id/ptlExpandLayout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/extentOfLandTitle"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/white_lato_regular_small40"
                            android:text="@string/extentOfLandPollution"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/white_lato_bold_small50" />

                        <RelativeLayout
                            android:id="@+id/spinnerLayout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/actionbar_height125"
                            android:layout_below="@+id/activity_type_text"
                            android:layout_marginBottom="@dimen/template_spacing15"
                            android:layout_marginLeft="@dimen/white_lato_regular_small40"
                            android:layout_marginRight="@dimen/white_lato_regular_small40"
                            android:layout_marginTop="@dimen/template_spacing15"
                            android:background="@drawable/edit_text_background" >

                            <TextView
                                android:id="@+id/landPollution"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/lanes_logo_bottom_margin23"
                                android:text="@string/select_spinner_str"
                                android:textColor="@color/black"
                                android:textSize="@dimen/black_lato_regular_small55" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/lanes_logo_bottom_margin23"
                                android:contentDescription="@string/desc"
                                android:src="@drawable/down_arrow_image" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/landAffectedTitle"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/white_lato_regular_small40"
                            android:text="@string/landAffected"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/white_lato_bold_small50" />

                        <RelativeLayout
                            android:id="@+id/spinnerLayout1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/actionbar_height125"
                            android:layout_below="@+id/activity_type_text"
                            android:layout_marginBottom="@dimen/template_spacing15"
                            android:layout_marginLeft="@dimen/white_lato_regular_small40"
                            android:layout_marginRight="@dimen/white_lato_regular_small40"
                            android:layout_marginTop="@dimen/template_spacing15"
                            android:background="@drawable/edit_text_background" >

                            <TextView
                                android:id="@+id/landAffected"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/lanes_logo_bottom_margin23"
                                android:text="@string/select_spinner_str"
                                android:textColor="@color/black"
                                android:textSize="@dimen/black_lato_regular_small55" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/lanes_logo_bottom_margin23"
                                android:contentDescription="@string/desc"
                                android:src="@drawable/down_arrow_image" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/landPollutantsTitle"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/white_lato_regular_small40"
                            android:text="@string/landPollutants"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/white_lato_bold_small50" />

                        <RelativeLayout
                            android:id="@+id/landPollutantsSpinnerLayout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/actionbar_height125"
                            android:layout_marginBottom="@dimen/template_spacing15"
                            android:layout_marginLeft="@dimen/white_lato_regular_small40"
                            android:layout_marginRight="@dimen/white_lato_regular_small40"
                            android:layout_marginTop="@dimen/template_spacing15"
                            android:background="@drawable/edit_text_background" >

                            <TextView
                                android:id="@+id/landPollutantsText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/lanes_logo_bottom_margin23"
                                android:text="@string/select_spinner_str"
                                android:textColor="@color/black"
                                android:textSize="@dimen/black_lato_regular_small55" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/lanes_logo_bottom_margin23"
                                android:contentDescription="@string/desc"
                                android:src="@drawable/down_arrow_image" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pollutionToWaterParent"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pollutionToLandParent"
                    android:layout_marginLeft="@dimen/dialog_detail_top_margin80"
                    android:layout_marginRight="@dimen/dialog_detail_top_margin80"
                    android:layout_marginTop="@dimen/white_lato_bold_small50"
                    android:orientation="vertical" >

                    <CheckBox
                        android:id="@+id/ptwCheckbox"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox_selector"
                        android:paddingLeft="@dimen/template_spacing27"
                        android:text="@string/pollution_to_water"
                        android:textColor="@color/black"
                        android:textSize="@dimen/progressbar_top_margin58" />

                    <LinearLayout
                        android:id="@+id/ptwExpandLayout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/extentOfWaterTitle"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/white_lato_regular_small40"
                            android:text="@string/extentOfWaterPollution"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/white_lato_bold_small50" />

                        <RelativeLayout
                            android:id="@+id/spinnerLayoutExtentOfWater"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/actionbar_height125"
                            android:layout_below="@+id/activity_type_text"
                            android:layout_marginBottom="@dimen/template_spacing15"
                            android:layout_marginLeft="@dimen/white_lato_regular_small40"
                            android:layout_marginRight="@dimen/white_lato_regular_small40"
                            android:layout_marginTop="@dimen/template_spacing15"
                            android:background="@drawable/edit_text_background" >

                            <TextView
                                android:id="@+id/extentOfWater"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/lanes_logo_bottom_margin23"
                                android:text="@string/select_spinner_str"
                                android:textColor="@color/black"
                                android:textSize="@dimen/black_lato_regular_small55" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/lanes_logo_bottom_margin23"
                                android:contentDescription="@string/desc"
                                android:src="@drawable/down_arrow_image" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/waterBodyAffectedTitle"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/white_lato_regular_small40"
                            android:text="@string/waterBodyAffected"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/white_lato_bold_small50" />

                        <RelativeLayout
                            android:id="@+id/spinnerLayoutWaterBody"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/actionbar_height125"
                            android:layout_below="@+id/activity_type_text"
                            android:layout_marginBottom="@dimen/template_spacing15"
                            android:layout_marginLeft="@dimen/white_lato_regular_small40"
                            android:layout_marginRight="@dimen/white_lato_regular_small40"
                            android:layout_marginTop="@dimen/template_spacing15"
                            android:background="@drawable/edit_text_background" >

                            <TextView
                                android:id="@+id/waterBody"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/lanes_logo_bottom_margin23"
                                android:text="@string/select_spinner_str"
                                android:textColor="@color/black"
                                android:textSize="@dimen/black_lato_regular_small55" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/lanes_logo_bottom_margin23"
                                android:contentDescription="@string/desc"
                                android:src="@drawable/down_arrow_image" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/waterPollutantsTitle"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/white_lato_regular_small40"
                            android:text="@string/waterPollutants"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/white_lato_bold_small50" />

                        <RelativeLayout
                            android:id="@+id/spinnerLayoutWaterPollutants"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/actionbar_height125"
                            android:layout_below="@+id/activity_type_text"
                            android:layout_marginBottom="@dimen/template_spacing15"
                            android:layout_marginLeft="@dimen/white_lato_regular_small40"
                            android:layout_marginRight="@dimen/white_lato_regular_small40"
                            android:layout_marginTop="@dimen/template_spacing15"
                            android:background="@drawable/edit_text_background" >

                            <TextView
                                android:id="@+id/waterPollutantsTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/lanes_logo_bottom_margin23"
                                android:text="@string/select_spinner_str"
                                android:textColor="@color/black"
                                android:textSize="@dimen/black_lato_regular_small55" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/lanes_logo_bottom_margin23"
                                android:contentDescription="@string/desc"
                                android:src="@drawable/down_arrow_image" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/dissolvedOxygen"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/white_lato_regular_small40"
                            android:text="@string/dissolvedOxygen"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/white_lato_bold_small50" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/white_lato_regular_small40"
                            android:layout_marginRight="@dimen/white_lato_regular_small40"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/upstream"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/white_lato_regular_small40"
                                android:layout_marginRight="@dimen/white_lato_regular_small40"
                                android:text="@string/upstream"
                                android:textColor="@color/blackColor"
                                android:textSize="@dimen/white_lato_bold_small50" />

                            <EditText
                                android:id="@+id/upstream_edittext"
                                android:layout_width="@dimen/dialog_list_height200"
                                android:layout_height="@dimen/edit_text_height130"
                                android:layout_marginLeft="@dimen/template_spacing15"
                                android:layout_marginRight="@dimen/template_spacing15"
                                android:background="@drawable/edit_text_background"
                                android:gravity="center"
                                android:hint="@string/tmp_number"
                                android:inputType="number"
                                android:maxLength="8"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:textSize="@dimen/white_lato_bold_small50" />

                            <Button
                                android:id="@+id/takePicture_upstream"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/edit_text_height130"
                                android:layout_marginRight="@dimen/template_spacing15"
                                android:background="@drawable/edit_text_background"
                                android:text="@string/site_photo"
                                android:textAllCaps="false"
                                android:textColor="@color/black"
                                android:textSize="@dimen/white_lato_bold_small50" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/white_lato_regular_small40"
                            android:layout_marginRight="@dimen/white_lato_regular_small40"
                            android:layout_marginTop="@dimen/template_spacing15"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/downstream"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/white_lato_regular_small40"
                                android:layout_marginRight="@dimen/white_lato_regular_small40"
                                android:text="@string/upstream"
                                android:textColor="@color/blackColor"
                                android:textSize="@dimen/white_lato_bold_small50" />

                            <EditText
                                android:id="@+id/downstream_edittext"
                                android:layout_width="@dimen/dialog_list_height200"
                                android:layout_height="@dimen/edit_text_height130"
                                android:layout_marginLeft="@dimen/template_spacing15"
                                android:layout_marginRight="@dimen/template_spacing15"
                                android:background="@drawable/edit_text_background"
                                android:gravity="center"
                                android:hint="@string/tmp_number"
                                android:inputType="number"
                                android:maxLength="8"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:textSize="@dimen/white_lato_bold_small50" />

                            <Button
                                android:id="@+id/takePicture_downstream"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/edit_text_height130"
                                android:layout_marginRight="@dimen/template_spacing15"
                                android:background="@drawable/edit_text_background"
                                android:text="@string/site_photo"
                                android:textAllCaps="false"
                                android:textColor="@color/black"
                                android:textSize="@dimen/white_lato_bold_small50" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/ammoniaTitle"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/pollutionToWaterParent"
                            android:layout_marginLeft="@dimen/white_lato_regular_small40"
                            android:layout_marginRight="@dimen/white_lato_regular_small40"
                            android:text="@string/ammonia"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/white_lato_bold_small50" />

                        <RelativeLayout
                            android:id="@+id/spinnerLayoutAmmonia"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/actionbar_height125"
                            android:layout_below="@+id/indicativeCauseTitle"
                            android:layout_marginBottom="@dimen/template_spacing15"
                            android:layout_marginLeft="@dimen/white_lato_regular_small40"
                            android:layout_marginRight="@dimen/white_lato_regular_small40"
                            android:layout_marginTop="@dimen/template_spacing15"
                            android:background="@drawable/edit_text_background" >

                            <TextView
                                android:id="@+id/ammonia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/lanes_logo_bottom_margin23"
                                android:text="@string/select_spinner_str"
                                android:textColor="@color/black"
                                android:textSize="@dimen/black_lato_regular_small55" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/lanes_logo_bottom_margin23"
                                android:contentDescription="@string/desc"
                                android:src="@drawable/down_arrow_image" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/fishKillTitle"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/pollutionToWaterParent"
                            android:layout_marginLeft="@dimen/white_lato_regular_small40"
                            android:layout_marginRight="@dimen/white_lato_regular_small40"
                            android:text="@string/fish_kill"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/white_lato_bold_small50" />

                        <RelativeLayout
                            android:id="@+id/spinnerLayoutFishKill"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/actionbar_height125"
                            android:layout_below="@+id/indicativeCauseTitle"
                            android:layout_marginBottom="@dimen/template_spacing15"
                            android:layout_marginLeft="@dimen/white_lato_regular_small40"
                            android:layout_marginRight="@dimen/white_lato_regular_small40"
                            android:layout_marginTop="@dimen/template_spacing15"
                            android:background="@drawable/edit_text_background" >

                            <TextView
                                android:id="@+id/fishKill"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/lanes_logo_bottom_margin23"
                                android:text="@string/select_spinner_str"
                                android:textColor="@color/black"
                                android:textSize="@dimen/black_lato_regular_small55" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/lanes_logo_bottom_margin23"
                                android:contentDescription="@string/desc"
                                android:src="@drawable/down_arrow_image" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pollutionToWaterParent"
                    android:layout_marginLeft="@dimen/dialog_detail_top_margin80"
                    android:layout_marginRight="@dimen/dialog_detail_top_margin80"
                    android:layout_marginTop="@dimen/white_lato_bold_small50"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/indicativeCauseTitle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pollutionToWaterParent"
                        android:layout_marginBottom="@dimen/grey_lato_regular_small26"
                        android:layout_marginLeft="@dimen/white_lato_regular_small40"
                        android:layout_marginRight="@dimen/white_lato_regular_small40"
                        android:text="@string/indicativeCause"
                        android:textColor="@color/blackColor"
                        android:textSize="@dimen/white_lato_bold_small50" />

                    <RelativeLayout
                        android:id="@+id/spinnerLayoutIndicative"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/actionbar_height125"
                        android:layout_below="@+id/indicativeCauseTitle"
                        android:layout_marginBottom="@dimen/template_spacing15"
                        android:layout_marginLeft="@dimen/white_lato_regular_small40"
                        android:layout_marginRight="@dimen/white_lato_regular_small40"
                        android:layout_marginTop="@dimen/template_spacing15"
                        android:background="@drawable/edit_text_background" >

                        <TextView
                            android:id="@+id/indicativeCause"
