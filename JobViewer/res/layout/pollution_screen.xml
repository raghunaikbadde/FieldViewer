                        android:layout_marginBottom="@dimen/template_spacing15"
                        android:layout_marginLeft="@dimen/white_lato_regular_small40"
                        android:layout_marginRight="@dimen/white_lato_regular_small40"
                        android:layout_marginTop="@dimen/template_spacing15"
                        android:background="@drawable/edit_text_background" >

                        <TextView
                            android:id="@+id/additionalED"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/lanes_logo_bottom_margin23"
                            android:text="@string/select_spinner_str"
                            android:textColor="@color/black"
                            android:textSize="@dimen/black_lato_regular_small55" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/lanes_logo_bottom_margin23"
                            android:contentDescription="@string/desc"
                            android:src="@drawable/down_arrow_image" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/map_layout"
                        android:layout_width="@dimen/capture_button_width840"
