<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.jobviewer.MainActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottombutton"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/progressbar_top_margin58"
                    android:layout_marginLeft="@dimen/dialog_detail_top_margin80"
                    android:layout_marginRight="@dimen/dialog_detail_top_margin80"
                    android:layout_marginTop="@dimen/white_lato_bold_small50"
                    android:gravity="center_horizontal"
                    android:text="@string/pollutionScreenTitle"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_text_size70" />

                <TextView
                    android:id="@+id/number_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/black_lato_regular_small55"
                    android:text="@string/vistec_number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/progressbar_top_margin58" />

                <LinearLayout
                    android:id="@+id/progress_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/number_text"
                    android:layout_marginLeft="@dimen/dialog_detail_top_margin80"
                    android:layout_marginRight="@dimen/dialog_detail_top_margin80"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/progress_step_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pollution_progress"
                        android:textColor="@color/black"
                        android:textSize="@dimen/white_lato_bold_small50"
                        android:textStyle="bold" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dialog_button_top_margin70"
                        android:layout_marginLeft="@dimen/edit_error_stroke10"
                        android:progress="70"
                        android:progressDrawable="@drawable/progressbar" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pollutionToLandParent"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/progress_layout"
                    android:layout_marginLeft="@dimen/dialog_detail_top_margin80"
                    android:layout_marginRight="@dimen/dialog_detail_top_margin80"
                    android:layout_marginTop="@dimen/white_lato_bold_small50"
                    android:orientation="vertical" >

                    <CheckBox
                        android:id="@+id/ptlCheckbox"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox_selector"
                        android:text="@string/pollution_to_land"
                        android:textColor="@color/black"
                        android:textSize="@dimen/progressbar_top_margin58" />

                    <LinearLayout
                        android:id="@+id/ptlExpandLayout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/extentOfLandTitle"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/white_lato_regular_small40"
                            android:layout_marginRight="@dimen/white_lato_regular_small40"
                            android:text="@string/extentOfLandPollution"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/white_lato_regular_small40" />

                        <Spinner
                            android:id="@+id/extentOfLandSpinner"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dialog_black_lato_regular_small60"
                            android:layout_marginLeft="@dimen/white_lato_regular_small40"
                            android:layout_marginRight="@dimen/white_lato_regular_small40"
                            android:text="@string/newtimestamp"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/white_lato_regular_small40" />

                        <TextView
                            android:id="@+id/landAffectedTitle"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/white_lato_regular_small40"
                            android:layout_marginRight="@dimen/white_lato_regular_small40"
                            android:text="@string/landAffected"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/white_lato_regular_small40" />

                        <Spinner
                            android:id="@+id/landAffectedSpinner"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dialog_black_lato_regular_small60"
                            android:layout_marginLeft="@dimen/white_lato_regular_small40"
                            android:layout_marginRight="@dimen/white_lato_regular_small40"
                            android:text="@string/newtimestamp"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/white_lato_regular_small40" />

                        <TextView
                            android:id="@+id/landPollutantsTitle"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/white_lato_regular_small40"
                            android:layout_marginRight="@dimen/white_lato_regular_small40"
                            android:text="@string/landPollutants"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/white_lato_regular_small40" />

                        <com.jobviewer.custom.view.MultiSelectSpinner
                            android:id="@+id/landPollutantsSpinner"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dialog_black_lato_regular_small60"
                            android:layout_marginLeft="@dimen/white_lato_regular_small40"
                            android:layout_marginRight="@dimen/white_lato_regular_small40"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/white_lato_regular_small40" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pollutionToWaterParent"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pollutionToLandParent"
                    android:layout_marginLeft="@dimen/dialog_detail_top_margin80"
                    android:layout_marginRight="@dimen/dialog_detail_top_margin80"
                    android:layout_marginTop="@dimen/white_lato_bold_small50"
                    android:orientation="vertical" >

                    <CheckBox
                        android:id="@+id/ptwCheckbox"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox_selector"
                        android:text="@string/pollution_to_water"
                        android:textColor="@color/black"
                        android:textSize="@dimen/progressbar_top_margin58" />

                    <LinearLayout
                        android:id="@+id/ptwExpandLayout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/extentOfWaterTitle"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/white_lato_regular_small40"
                            android:layout_marginRight="@dimen/white_lato_regular_small40"
                            android:text="@string/extentOfWaterPollution"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/white_lato_regular_small40" />

                        <Spinner
                            android:id="@+id/extentOfWaterSpinner"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dialog_black_lato_regular_small60"
                            android:layout_marginLeft="@dimen/white_lato_regular_small40"
                            android:layout_marginRight="@dimen/white_lato_regular_small40"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/white_lato_regular_small40" />

                        <TextView
                            android:id="@+id/waterBodyAffectedTitle"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/white_lato_regular_small40"
                            android:layout_marginRight="@dimen/white_lato_regular_small40"
                            android:text="@string/waterBodyAffected"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/white_lato_regular_small40" />

                        <Spinner
                            android:id="@+id/waterBodyAffectedSpinner"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dialog_black_lato_regular_small60"
                            android:layout_marginLeft="@dimen/white_lato_regular_small40"
                            android:layout_marginRight="@dimen/white_lato_regular_small40"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/white_lato_regular_small40" />

                        <TextView
                            android:id="@+id/waterPollutantsTitle"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/white_lato_regular_small40"
                            android:layout_marginRight="@dimen/white_lato_regular_small40"
                            android:text="@string/waterPollutants"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/white_lato_regular_small40" />

                        <com.jobviewer.custom.view.MultiSelectSpinner
                            android:id="@+id/waterPollutantsSpinner"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dialog_black_lato_regular_small60"
                            android:layout_marginLeft="@dimen/white_lato_regular_small40"
                            android:layout_marginRight="@dimen/white_lato_regular_small40"
                            android:textColor="@color/blackColor"
                            android:textSize="@dimen/white_lato_regular_small40" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/indicativeCauseTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pollutionToWaterParent"
                    android:layout_marginLeft="@dimen/white_lato_regular_small40"
                    android:layout_marginRight="@dimen/white_lato_regular_small40"
                    android:text="@string/indicativeCause"
                    android:textColor="@color/blackColor"
                    android:textSize="@dimen/white_lato_regular_small40" />

                <Spinner
                    android:id="@+id/indicativeCauseSpinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/indicativeCauseTitle"
                    android:layout_marginBottom="@dimen/dialog_black_lato_regular_small60"
                    android:layout_marginLeft="@dimen/white_lato_regular_small40"
                    android:layout_marginRight="@dimen/white_lato_regular_small40"
                    android:textColor="@color/blackColor"
                    android:textSize="@dimen/white_lato_regular_small40" />

                <TextView
                    android:id="@+id/additionalEDTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/indicativeCauseSpinner"
                    android:layout_marginLeft="@dimen/white_lato_regular_small40"
                    android:layout_marginRight="@dimen/white_lato_regular_small40"
                    android:text="@string/additionalED"
                    android:textColor="@color/blackColor"
                    android:textSize="@dimen/white_lato_regular_small40" />

                <com.jobviewer.custom.view.MultiSelectSpinner
                    android:id="@+id/additionalEDSpinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/additionalEDTitle"
                    android:layout_marginBottom="@dimen/dialog_black_lato_regular_small60"
                    android:layout_marginLeft="@dimen/white_lato_regular_small40"
                    android:layout_marginRight="@dimen/white_lato_regular_small40"
                    android:textColor="@color/blackColor"
                    android:textSize="@dimen/white_lato_regular_small40" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottombutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/white_lato_regular_big79"
        android:layout_marginLeft="@dimen/white_lato_regular_big79"
        android:layout_marginRight="@dimen/white_lato_regular_big79" >

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height150"
            android:layout_weight="20"
            android:background="@drawable/grey_background"
            android:text="@string/save"
            android:textColor="@color/black"
            android:textSize="@dimen/dialog_black_lato_regular_small60" />

        <Button
            android:id="@+id/space"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:visibility="invisible" />

        <Button
            android:id="@+id/nextButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height150"
            android:layout_weight="20"
            android:background="@drawable/red_background"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="@dimen/dialog_black_lato_regular_small60" />
    </LinearLayout>

</RelativeLayout>