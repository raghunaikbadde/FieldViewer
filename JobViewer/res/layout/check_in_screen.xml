<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/buttonParent"
        android:layout_alignParentTop="true"
        android:fillViewport="true"
        android:isScrollContainer="false" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:id="@+id/check_out_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/white_lato_regular_small40"
                android:layout_marginRight="@dimen/white_lato_regular_small40"
                android:layout_marginTop="@dimen/white_lato_bold_small50"
                android:drawableLeft="@drawable/logo_top"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="@string/returnVahicle"
                android:textColor="@color/black"
                android:textSize="@dimen/title_text_size70" />

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/check_out_text"
                android:layout_marginBottom="@dimen/grey_lato_regular_small35"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/grey_lato_regular_small35"
                android:background="#CCCCCC" />

            <LinearLayout
                android:id="@+id/progress_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line1"
                android:layout_marginLeft="@dimen/dialog_detail_top_margin80"
                android:layout_marginRight="@dimen/dialog_detail_top_margin80"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/progress_step_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/check_in_screen_return_vehicle"
                    android:textColor="@color/black"
                    android:textSize="@dimen/white_lato_bold_small50" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dialog_button_top_margin70"
                    android:layout_marginLeft="@dimen/spinner_top_margin25"
                    android:progress="5"
                    android:progressDrawable="@drawable/progressbar" />
            </LinearLayout>

            <TextView
                android:id="@+id/enter_details_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progress_layout"
                android:layout_marginBottom="@dimen/white_lato_bold_small50"
                android:layout_marginLeft="@dimen/white_lato_regular_big79"
                android:layout_marginRight="@dimen/white_lato_regular_big79"
                android:layout_marginTop="@dimen/black_lato_regular_medium45"
                android:text="@string/returnVehicleMsg"
                android:textColor="@color/black"
                android:textSize="@dimen/white_lato_bold_small50" />

            <TextView
                android:id="@+id/vehicle_registration_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/enter_details_text"
                android:layout_marginBottom="@dimen/spinner_top_margin25"
                android:layout_marginLeft="@dimen/white_lato_regular_big79"
                android:layout_marginRight="@dimen/white_lato_regular_big79"
                android:text="@string/vehicle_registration_str"
                android:textColor="@color/black"
                android:textSize="@dimen/white_lato_bold_small50" />

            <TextView
                android:id="@+id/vehicle_registration_text_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vehicle_registration_text"
                android:layout_marginBottom="@dimen/spinner_top_margin25"
                android:layout_marginLeft="@dimen/white_lato_regular_big79"
                android:layout_marginRight="@dimen/white_lato_regular_big79"
                android:text="@string/vehicle_registration_str"
                android:textColor="@color/black"
                android:textSize="@dimen/white_lato_bold_small50"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vehicle_mileage_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vehicle_registration_text_value"
                android:layout_marginBottom="@dimen/spinner_top_margin25"
                android:layout_marginLeft="@dimen/white_lato_regular_big79"
                android:layout_marginRight="@dimen/white_lato_regular_big79"
                android:layout_marginTop="@dimen/white_lato_bold_small50"
                android:text="@string/enter_mileage"
                android:textColor="@color/black"
                android:textSize="@dimen/white_lato_bold_small50" />

            <EditText
                android:id="@+id/enter_mileage_edittext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/checkout_edit_height160"
                android:layout_below="@+id/vehicle_mileage_text"
                android:layout_marginLeft="@dimen/white_lato_regular_big79"
                android:layout_marginRight="@dimen/white_lato_regular_big79"
                android:background="@drawable/edit_text_background"
                android:digits="0123456789"
                android:hint="@string/enter_mileage"
                android:inputType="number|none"
                android:maxLength="@integer/max_vehicle_mileage_length"
                android:padding="@dimen/grey_lato_regular_small35"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/dark_grey"
                android:textSize="@dimen/black_lato_regular_medium45" />
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/buttonParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/white_lato_regular_big79" >

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height150"
            android:layout_weight="20"
            android:background="@drawable/dialog_grey_button"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/lighter_grey"
            android:textSize="@dimen/dialog_black_lato_regular_small60" />

        <Button
            android:id="@+id/space"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:visibility="invisible" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height150"
            android:layout_weight="20"
            android:background="@drawable/dark_grey_background"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/dialog_black_lato_regular_small60" />
    </LinearLayout>

</RelativeLayout>