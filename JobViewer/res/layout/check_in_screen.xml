<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.jobviewer.MainActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:fillViewport="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:id="@+id/check_out_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/progressbar_top_margin58"
                android:layout_marginTop="@dimen/white_lato_bold_small50"
                android:text="@string/returnVahicle"
                android:textColor="@color/black"
                android:textSize="@dimen/title_text_size70" />

            <LinearLayout
                android:id="@+id/progress_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/check_out_text"
                android:layout_marginLeft="@dimen/dialog_detail_top_margin80"
                android:layout_marginRight="@dimen/dialog_detail_top_margin80"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/progress_step_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/progress_step_return_vehicle"
                    android:textColor="@color/black"
                    android:textSize="@dimen/white_lato_bold_small50"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dialog_button_top_margin70"
                    android:layout_marginLeft="@dimen/edit_error_stroke10"
                    android:progress="5"
                    android:progressDrawable="@drawable/progressbar" />
            </LinearLayout>

            <TextView
                android:id="@+id/enter_details_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progress_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/white_lato_bold_small50"
                android:layout_marginLeft="@dimen/white_lato_regular_big79"
                android:layout_marginRight="@dimen/white_lato_regular_big79"
                android:layout_marginTop="@dimen/red_lato_bold_big90"
                android:text="@string/returnVehicleMsg"
                android:textColor="@color/black"
                android:textSize="@dimen/white_lato_bold_small50" />

            <TextView
                android:id="@+id/vehicle_registration_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/enter_details_text"
                android:layout_marginBottom="@dimen/spinner_top_margin25"
                android:layout_marginLeft="@dimen/white_lato_regular_big79"
                android:layout_marginRight="@dimen/white_lato_regular_big79"
                android:text="@string/vehicle_registration_str"
                android:textColor="@color/black"
                android:textSize="@dimen/white_lato_bold_small50" />

            <TextView
                android:id="@+id/vehicle_registration_text_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vehicle_registration_text"
                android:layout_marginBottom="@dimen/spinner_top_margin25"
                android:layout_marginLeft="@dimen/white_lato_regular_big79"
                android:layout_marginRight="@dimen/white_lato_regular_big79"
                android:text="@string/vehicle_registration_str"
                android:textColor="@color/black"
                android:textSize="@dimen/white_lato_bold_small50" />

            <TextView
                android:id="@+id/vehicle_mileage_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vehicle_registration_text_value"
                android:layout_marginBottom="@dimen/spinner_top_margin25"
                android:layout_marginLeft="@dimen/white_lato_regular_big79"
                android:layout_marginRight="@dimen/white_lato_regular_big79"
                android:layout_marginTop="@dimen/white_lato_bold_small50"
                android:text="@string/vehicle_mileage_str"
                android:textColor="@color/black"
                android:textSize="@dimen/white_lato_bold_small50" />
            
            <EditText
                    android:id="@+id/enter_mileage_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/checkout_edit_height160"
                    android:layout_below="@+id/vehicle_mileage_text"
                    android:layout_marginLeft="@dimen/white_lato_regular_big79"
                    android:layout_marginRight="@dimen/white_lato_regular_big79"
                    android:background="@drawable/grey_background"
                    android:hint="@string/enter_mileage"
                    android:inputType="number|none"
                    android:digits="0123456789"
                    android:paddingBottom="@dimen/grey_lato_regular_small35"
                    android:paddingLeft="@dimen/grey_lato_regular_small35"
                    android:paddingRight="@dimen/grey_lato_regular_small35"
                    android:paddingTop="@dimen/grey_lato_regular_small35"
                    android:singleLine="true"
                    android:maxLength="@integer/max_vehicle_mileage_length"
                    android:textColor="@color/dark_grey"
                    android:textColorHint="@color/dark_grey"
                    android:textSize="@dimen/black_lato_regular_medium45" >
                </EditText>

            <LinearLayout
                android:id="@+id/buttonParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/white_lato_regular_big79" >

                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height150"
                    android:layout_weight="20"
                    android:background="@drawable/grey_background"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dialog_black_lato_regular_small60" />

                <Button
                    android:id="@+id/space"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/next_button"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height150"
                    android:layout_weight="20"
                    android:background="@drawable/dark_grey_background"
                    android:text="@string/next"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dialog_black_lato_regular_small60" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>