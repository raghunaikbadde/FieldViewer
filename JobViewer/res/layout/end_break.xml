<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/header"
        layout="@layout/job_viewer_title_template"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footer"
        android:layout_below="@+id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="top"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dialog_detail_top_margin80"
                android:text="@string/break_start_time_text"
                android:textColor="@color/black"
                android:textSize="@dimen/black_lato_regular_small55" />

            <TextView
                android:id="@+id/break_start_time_text_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="@dimen/black_lato_regular_small55"
                android:visibility="gone" />

            <TextView
                android:id="@+id/break_start_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="@dimen/black_lato_regular_small55" />

            <Button
                android:id="@+id/end_break"
                android:layout_width="@dimen/clock_in_button_width628"
                android:layout_height="@dimen/user_detail_height223"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/actionbar_bottom_margin85"
                android:background="@drawable/red_background"
                android:text="@string/end_break_str"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/white_lato_regular_big79" />
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/footer"
        layout="@layout/copyright_bottom_template"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>