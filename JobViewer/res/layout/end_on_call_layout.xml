<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.lanesgroup.jobviewer.MainActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottombutton"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/clockin_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/progressbar_top_margin58"
                    android:layout_marginTop="@dimen/white_lato_bold_small50"
                    android:text="@string/end_on_call_str"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_text_size70" />

                <LinearLayout
                    android:id="@+id/progress_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/clockin_text"
                    android:layout_marginLeft="@dimen/dialog_detail_top_margin80"
                    android:layout_marginRight="@dimen/dialog_detail_top_margin80"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/progress_step_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/progress_step_end_on_call"
                        android:textColor="@color/black"
                        android:textSize="@dimen/white_lato_bold_small50"
                        android:textStyle="bold" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dialog_button_top_margin70"
                        android:layout_marginLeft="@dimen/edit_error_stroke10"
                        android:progress="5"
                        android:progressDrawable="@drawable/progressbar" />
                </LinearLayout>

                <TextView
                    android:id="@+id/confirm_the_info_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/progress_layout"
                    android:layout_marginBottom="@dimen/white_lato_bold_small50"
                    android:layout_marginLeft="@dimen/white_lato_regular_big79"
                    android:layout_marginRight="@dimen/white_lato_regular_big79"
                    android:layout_marginTop="@dimen/red_lato_bold_big90"
                    android:text="@string/confirm_all_details"
                    android:textColor="@color/black"
                    android:textSize="@dimen/black_lato_regular_small55" />

                <TextView
                    android:id="@+id/shift_end_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/confirm_the_info_text"
                    android:layout_marginBottom="@dimen/dialog_clock_icon_left_right_margin40"
                    android:layout_marginLeft="@dimen/white_lato_regular_big79"
                    android:layout_marginRight="@dimen/white_lato_regular_big79"
                    android:text="@string/shift_end_time"
                    android:textColor="@color/black"
                    android:textSize="@dimen/white_lato_bold_small50" />

                <TextView
                    android:id="@+id/date_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shift_end_time_text"
                    android:layout_marginBottom="@dimen/dialog_edit_top_margin35"
                    android:layout_marginLeft="@dimen/white_lato_regular_big79"
                    android:layout_marginRight="@dimen/white_lato_regular_big79"
                    android:text="@string/tmp_date_time"
                    android:textColor="@color/black"
                    android:textSize="@dimen/white_lato_bold_small50" />

                <TextView
                    android:id="@+id/stroke_text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dialog_list_divider4"
                    android:layout_below="@+id/date_time_text"
                    android:layout_marginBottom="@dimen/dialog_edit_top_margin35"
                    android:layout_marginLeft="@dimen/white_lato_regular_big79"
                    android:layout_marginRight="@dimen/white_lato_regular_big79"
                    android:background="@color/light_grey" />

                <TextView
                    android:id="@+id/user_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/stroke_text"
                    android:layout_marginBottom="@dimen/dialog_edit_top_margin35"
                    android:layout_marginLeft="@dimen/white_lato_regular_big79"
                    android:layout_marginRight="@dimen/white_lato_regular_big79"
                    android:text="@string/user_ending_shift"
                    android:textColor="@color/black"
                    android:textSize="@dimen/white_lato_bold_small50" />

                <TextView
                    android:id="@+id/user_email_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_text"
                    android:layout_marginBottom="@dimen/dialog_edit_top_margin35"
                    android:layout_marginLeft="@dimen/white_lato_regular_big79"
                    android:layout_marginRight="@dimen/white_lato_regular_big79"
                    android:text="@string/tmp_user_email"
                    android:textColor="@color/black"
                    android:textSize="@dimen/white_lato_bold_small50" />
                				
                <TextView
                    android:id="@+id/stroke_text2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dialog_list_divider4"
                    android:layout_below="@+id/user_email_text"
                    android:layout_marginBottom="@dimen/dialog_edit_top_margin35"
                    android:layout_marginLeft="@dimen/white_lato_regular_big79"
                    android:layout_marginRight="@dimen/white_lato_regular_big79"
                    android:background="@color/light_grey" />
				<TextView
                    android:id="@+id/vehicle_used"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/stroke_text2"
                    android:layout_marginBottom="@dimen/dialog_edit_top_margin35"
                    android:layout_marginLeft="@dimen/white_lato_regular_big79"
                    android:layout_marginRight="@dimen/white_lato_regular_big79"
                    android:text="@string/vehicle_used"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    android:textSize="@dimen/white_lato_bold_small50" />
                <TextView
                    android:id="@+id/vehicle_used_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vehicle_used"
                    android:layout_marginBottom="@dimen/dialog_edit_top_margin35"
                    android:layout_marginLeft="@dimen/white_lato_regular_big79"
                    android:layout_marginRight="@dimen/white_lato_regular_big79"
                    android:text="@string/vehicle_used"
                    android:textColor="@color/black"
                    android:textSize="@dimen/white_lato_bold_small50"
                    android:visibility="invisible" />				
                <TextView
                    android:id="@+id/mileage_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/vehicle_used_text"
                    android:layout_marginBottom="@dimen/dialog_edit_top_margin35"
                    android:layout_marginLeft="@dimen/white_lato_regular_big79"
                    android:layout_marginRight="@dimen/white_lato_regular_big79"
                    android:text="@string/tmp_mileage_str"
                    android:textColor="@color/black"
                    android:textSize="@dimen/white_lato_bold_small50"
                    android:visibility="invisible" />
                <TextView
                    android:id="@+id/stroke_text4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dialog_list_divider4"
                    android:layout_below="@+id/vehicle_used_text"
                    android:layout_marginBottom="@dimen/dialog_edit_top_margin35"
                    android:layout_marginLeft="@dimen/white_lato_regular_big79"
                    android:layout_marginRight="@dimen/white_lato_regular_big79"
                    android:visibility="gone"
                    android:background="@color/light_grey" />
                
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottombutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <CheckBox
            android:id="@+id/confirm_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/checkout_checkbox_left_margin158"
            android:layout_marginRight="@dimen/checkout_checkbox_left_margin158"
            android:button="@drawable/checkbox_selector"
            android:paddingLeft="@dimen/template_spacing27"
            android:text="@string/i_confirm_the_info_str"
            android:textColor="@color/black"
            android:textSize="@dimen/progressbar_top_margin58" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirm_checkbox"
            android:layout_margin="@dimen/white_lato_regular_big79" >

            <Button
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height150"
                android:layout_weight="20"
                android:background="@drawable/grey_background"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/dialog_black_lato_regular_small60" />

            <Button
                android:id="@+id/space"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:visibility="invisible" />

            <Button
                android:id="@+id/endoncall"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height150"
                android:layout_weight="20"
                android:background="@drawable/dark_grey_background"
                android:text="@string/end_on_call_str"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/dialog_black_lato_regular_small60" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>