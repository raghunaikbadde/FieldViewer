<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_button"
        android:layout_alignParentTop="true"
        android:isScrollContainer="false" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/travel_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/white_lato_regular_small40"
                    android:layout_marginRight="@dimen/white_lato_regular_small40"
                    android:layout_marginTop="@dimen/white_lato_bold_small50"
                    android:drawableLeft="@drawable/logo_top"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="@string/travel_to_work"
                    android:textColor="@color/red"
                    android:textSize="@dimen/title_text_size70" />

                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/travel_text"
                    android:layout_marginBottom="@dimen/grey_lato_regular_small35"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="@dimen/grey_lato_regular_small35"
                    android:background="#CCCCCC" />

                <TextView
                    android:id="@+id/tap_to_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/black_lato_regular_small55"
                    android:layout_marginLeft="@dimen/white_lato_regular_big79"
                    android:layout_marginRight="@dimen/white_lato_regular_big79"
                    android:text="@string/tap_start_travel"
                    android:textColor="@color/black"
                    android:textSize="@dimen/progressbar_top_margin58" />

                <Button
                    android:id="@+id/start"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/call_customer_button_height180"
                    android:layout_below="@+id/tap_to_text"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/user_detail_left_spacing140"
                    android:layout_marginRight="@dimen/user_detail_left_spacing140"
                    android:background="@drawable/red_background"
                    android:text="@string/start_travel"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dialog_black_lato_regular_small60" />

                <TextView
                    android:id="@+id/answer_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/start"
                    android:layout_marginBottom="@dimen/black_lato_regular_small55"
                    android:layout_marginLeft="@dimen/white_lato_regular_big79"
                    android:layout_marginRight="@dimen/white_lato_regular_big79"
                    android:layout_marginTop="@dimen/dialog_edit_top_margin35"
                    android:text="@string/tapOnArrivedOnSite"
                    android:textColor="@color/black"
                    android:textSize="@dimen/progressbar_top_margin58" />

                <Button
                    android:id="@+id/arrivedOnSite"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/call_customer_button_height180"
                    android:layout_below="@+id/answer_text2"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/user_detail_left_spacing140"
                    android:layout_marginRight="@dimen/user_detail_left_spacing140"
                    android:background="@drawable/red_background"
                    android:text="@string/arrivedOnSite"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dialog_black_lato_regular_small60" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/white_lato_regular_big79"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height150"
            android:layout_weight="20"
            android:background="@drawable/dialog_grey_button"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/lighter_grey"
            android:textSize="@dimen/dialog_black_lato_regular_small60" />

        <Button
            android:id="@+id/space"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:visibility="invisible" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height150"
            android:layout_weight="20"
            android:background="@drawable/dark_grey_background"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/dialog_black_lato_regular_small60" />
    </LinearLayout>

</RelativeLayout>