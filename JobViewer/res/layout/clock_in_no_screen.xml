<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.lanesgroup.jobviewer.MainActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottombutton"
        android:layout_alignParentTop="true"
        android:isScrollContainer="false" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/clockin_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/white_lato_bold_small50"
                    android:drawableLeft="@drawable/logo_top"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="@string/clock_in_str"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_text_size70" />

                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/clockin_text"
                    android:layout_marginBottom="@dimen/white_lato_bold_small50"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="@dimen/white_lato_bold_small50"
                    android:background="#CCCCCC" />

                <LinearLayout
                    android:id="@+id/progress_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line1"
                    android:layout_marginLeft="@dimen/dialog_detail_top_margin80"
                    android:layout_marginRight="@dimen/dialog_detail_top_margin80"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/progress_step_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/progress_step"
                        android:textColor="@color/black"
                        android:textSize="@dimen/white_lato_bold_small50"
                        android:textStyle="bold" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dialog_button_top_margin70"
                        android:layout_marginLeft="@dimen/spinner_top_margin25"
                        android:progress="5"
                        android:progressDrawable="@drawable/progressbar" />
                </LinearLayout>

                <TextView
                    android:id="@+id/confirm_the_info_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/progress_layout"
                    android:layout_marginBottom="@dimen/white_lato_bold_small50"
                    android:layout_marginLeft="@dimen/white_lato_regular_big79"
                    android:layout_marginRight="@dimen/white_lato_regular_big79"
                    android:layout_marginTop="@dimen/red_lato_bold_big90"
                    android:text="@string/confirm_the_info_str"
                    android:textColor="@color/black"
                    android:textSize="@dimen/black_lato_regular_small55" />

                <TextView
                    android:id="@+id/shift_start_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/confirm_the_info_text"
                    android:layout_marginBottom="@dimen/dialog_clock_icon_left_right_margin40"
                    android:layout_marginLeft="@dimen/white_lato_regular_big79"
                    android:layout_marginRight="@dimen/white_lato_regular_big79"
                    android:text="@string/shift_start_time_str"
                    android:textColor="@color/black"
                    android:textSize="@dimen/white_lato_bold_small50" />

                <TextView
                    android:id="@+id/overrided_date_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shift_start_time_text"
                    android:layout_marginBottom="@dimen/dialog_edit_top_margin35"
                    android:layout_marginLeft="@dimen/white_lato_regular_big79"
                    android:layout_marginRight="@dimen/white_lato_regular_big79"
                    android:text="@string/tmp_date_time"
                    android:textColor="@color/black"
                    android:textSize="@dimen/white_lato_bold_small50"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/date_time_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/overrided_date_time_text"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/date_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dialog_edit_top_margin35"
                        android:layout_marginLeft="@dimen/white_lato_regular_big79"
                        android:layout_marginRight="@dimen/white_lato_regular_big79"
                        android:text="@string/tmp_date_time"
                        android:textColor="@color/black"
                        android:textSize="@dimen/white_lato_bold_small50" />

                    <ImageView
                        android:id="@+id/edit_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/detail_bottom_margin70"
                        android:src="@drawable/edit_icon" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/stroke_text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dialog_list_divider4"
                    android:layout_below="@+id/date_time_layout"
                    android:layout_marginBottom="@dimen/dialog_edit_top_margin35"
                    android:layout_marginLeft="@dimen/white_lato_regular_big79"
                    android:layout_marginRight="@dimen/white_lato_regular_big79"
                    android:background="@color/light_grey" />

                <TextView
                    android:id="@+id/user_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/stroke_text"
                    android:layout_marginBottom="@dimen/dialog_edit_top_margin35"
                    android:layout_marginLeft="@dimen/white_lato_regular_big79"
                    android:layout_marginRight="@dimen/white_lato_regular_big79"
                    android:text="@string/user"
                    android:textColor="@color/black"
                    android:textSize="@dimen/white_lato_bold_small50" />

                <TextView
                    android:id="@+id/user_email_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_text"
                    android:layout_marginBottom="@dimen/dialog_edit_top_margin35"
                    android:layout_marginLeft="@dimen/white_lato_regular_big79"
                    android:layout_marginRight="@dimen/white_lato_regular_big79"
                    android:text="@string/tmp_user_email"
                    android:textColor="@color/black"
                    android:textSize="@dimen/white_lato_bold_small50" />

                <TextView
                    android:id="@+id/stroke_text2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dialog_list_divider4"
                    android:layout_below="@+id/user_email_text"
                    android:layout_marginBottom="@dimen/dialog_edit_top_margin35"
                    android:layout_marginLeft="@dimen/white_lato_regular_big79"
                    android:layout_marginRight="@dimen/white_lato_regular_big79"
                    android:background="@color/light_grey" />

                <TextView
                    android:id="@+id/vehicle_used_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/stroke_text2"
                    android:layout_marginBottom="@dimen/dialog_edit_top_margin35"
                    android:layout_marginLeft="@dimen/white_lato_regular_big79"
                    android:layout_marginRight="@dimen/white_lato_regular_big79"
                    android:text="@string/vehicle_user_str"
                    android:textColor="@color/black"
                    android:textSize="@dimen/white_lato_bold_small50"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/mileage_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vehicle_used_text"
                    android:layout_marginBottom="@dimen/dialog_edit_top_margin35"
                    android:layout_marginLeft="@dimen/white_lato_regular_big79"
                    android:layout_marginRight="@dimen/white_lato_regular_big79"
                    android:text="@string/tmp_mileage_str"
                    android:textColor="@color/black"
                    android:textSize="@dimen/white_lato_bold_small50"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottombutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp" >

        <CheckBox
            android:id="@+id/confirm_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/white_lato_regular_big79"
            android:layout_marginRight="@dimen/white_lato_regular_big79"
            android:button="@drawable/checkbox_selector"
            android:paddingLeft="@dimen/template_spacing27"
            android:text="@string/i_confirm_the_info_str"
            android:textColor="@color/black"
            android:textSize="@dimen/progressbar_top_margin58" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirm_checkbox"
            android:layout_margin="@dimen/white_lato_regular_big79" >

            <Button
                android:id="@+id/back"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height150"
                android:layout_weight="20"
                android:background="@drawable/grey_background"
                android:text="@string/back"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/dialog_black_lato_regular_small60" />

            <Button
                android:id="@+id/space"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:visibility="invisible" />

            <Button
                android:id="@+id/clockin"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height150"
                android:layout_weight="20"
                android:background="@drawable/dark_grey_background"
                android:text="@string/clock_in_str"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/dialog_black_lato_regular_small60" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>