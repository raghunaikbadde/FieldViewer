<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottombutton"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/vistec_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/white_lato_bold_small50"
                android:layout_marginTop="@dimen/white_lato_bold_small50"
                android:text="@string/vistec_number"
                android:textColor="@color/black"
                android:textSize="@dimen/progressbar_top_margin58" />

            <LinearLayout
                android:id="@+id/progress_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vistec_number_text"
                android:layout_marginLeft="@dimen/dialog_detail_top_margin80"
                android:layout_marginRight="@dimen/dialog_detail_top_margin80"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/progress_step_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/pollution_progress"
                    android:textColor="@color/black"
                    android:textSize="@dimen/white_lato_bold_small50" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dialog_button_top_margin70"
                    android:layout_marginLeft="@dimen/spinner_top_margin25"
                    android:progress="70"
                    android:progressDrawable="@drawable/progressbar" />
            </LinearLayout>

            <TextView
                android:id="@+id/add_photos_info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progress_layout"
                android:layout_marginBottom="@dimen/white_lato_bold_small50"
                android:layout_marginLeft="@dimen/dialog_detail_top_margin80"
                android:layout_marginRight="@dimen/dialog_detail_top_margin80"
                android:layout_marginTop="@dimen/white_lato_bold_small50"
                android:text="@string/add_photos_str"
                android:textColor="@color/black"
                android:textSize="@dimen/black_lato_regular_small55" />

            <TextView
                android:id="@+id/capture_info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_photos_info_text"
                android:layout_marginBottom="@dimen/black_lato_regular_medium45"
                android:layout_marginLeft="@dimen/red_lato_bold_big90"
                android:layout_marginRight="@dimen/dialog_detail_top_margin80"
                android:text="@string/minimum_photos_str"
                android:textColor="@color/shallow_grey"
                android:textSize="@dimen/grey_lato_regular_medium47" />

            <LinearLayout
                android:id="@+id/imagebutton_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/start_break_button_height168"
                android:layout_below="@+id/capture_info_text"
                android:layout_marginLeft="@dimen/dialog_detail_top_margin80"
                android:layout_marginRight="@dimen/dialog_detail_top_margin80" >

                <ImageButton
                    android:id="@+id/detail_imageButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/imagebutton"
                    android:contentDescription="@string/desc"
                    android:src="@drawable/camera_info_icon" />

                <ImageButton
                    android:id="@+id/video_imageButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/imagebutton_spacing20"
                    android:layout_weight="1"
                    android:background="@drawable/imagebutton"
                    android:contentDescription="@string/desc"
                    android:src="@drawable/road_block_icon" />

                <ImageButton
                    android:id="@+id/user_imageButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/imagebutton_spacing20"
                    android:layout_weight="1"
                    android:background="@drawable/imagebutton"
                    android:contentDescription="@string/desc"
                    android:src="@drawable/user_with_tool_icon" />

                <ImageButton
                    android:id="@+id/ib_pollution"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/imagebutton_spacing20"
                    android:layout_weight="1"
                    android:background="@drawable/imagebutton"
                    android:contentDescription="@string/desc"
                    android:src="@drawable/ico_fish" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/camera_layout"
                android:layout_width="@dimen/capture_button_width840"
                android:layout_height="@dimen/capture_button_height220"
                android:layout_below="@+id/imagebutton_layout"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/dialog_detail_top_margin80"
                android:background="@drawable/red_background"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/camera_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/desc"
                    android:src="@drawable/camera_icon" />

                <TextView
                    android:id="@+id/capture_image_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spinner_bottom_margin30"
                    android:text="@string/capture_image_str"
                    android:textColor="@color/white"
                    android:textSize="@dimen/progressbar_top_margin58" />
            </LinearLayout>

            <ListView
                android:id="@+id/listview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/camera_layout" />
        </RelativeLayout>
    </LinearLayout>
    <!-- </ScrollView> -->

    <LinearLayout
        android:id="@+id/bottombutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footerView"
        android:layout_margin="@dimen/white_lato_regular_big79" >

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dialog_icon_image_163"
            android:layout_weight="20"
            android:background="@drawable/dialog_grey_button"
            android:text="@string/save_2"
            android:textAllCaps="false"
            android:textColor="@color/lighter_grey"
            android:textSize="@dimen/dialog_black_lato_regular_small60" />

        <Button
            android:id="@+id/space"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:visibility="invisible" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="@dimen/dialog_icon_image_163"
            android:layout_gravity="center_vertical"
            android:layout_weight="20"
            android:background="@drawable/dark_grey_background"
            android:text="@string/leave_site_complete"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/dialog_black_lato_regular_small60" />
    </LinearLayout>

    <include
        android:id="@+id/footerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/copyright_bottom_template" />

</RelativeLayout>