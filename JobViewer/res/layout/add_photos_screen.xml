<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.jobviewer.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottombutton"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/vistec_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/white_lato_bold_small50"
                android:layout_marginTop="@dimen/white_lato_bold_small50"
                android:text="@string/vistec_number"
                android:textColor="@color/black"
                android:textSize="@dimen/progressbar_top_margin58" />

            <LinearLayout
                android:id="@+id/progress_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vistec_number_text"
                android:layout_marginLeft="@dimen/dialog_detail_top_margin80"
                android:layout_marginRight="@dimen/dialog_detail_top_margin80"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/progress_step_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/pollution_progress"
                    android:textColor="@color/black"
                    android:textSize="@dimen/white_lato_bold_small50"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dialog_button_top_margin70"
                    android:layout_marginLeft="@dimen/spinner_top_margin25"
                    android:progress="70"
                    android:progressDrawable="@drawable/progressbar" />
            </LinearLayout>

            <TextView
                android:id="@+id/add_photos_info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progress_layout"
                android:layout_marginBottom="@dimen/white_lato_bold_small50"
                android:layout_marginLeft="@dimen/dialog_detail_top_margin80"
                android:layout_marginRight="@dimen/dialog_detail_top_margin80"
                android:layout_marginTop="@dimen/white_lato_bold_small50"
                android:text="@string/add_photos_str"
                android:textColor="@color/black"
                android:textSize="@dimen/black_lato_regular_small55" />

            <TextView
                android:id="@+id/capture_info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_photos_info_text"
                android:layout_marginBottom="@dimen/black_lato_regular_medium45"
                android:layout_marginLeft="@dimen/red_lato_bold_big90"
                android:layout_marginRight="@dimen/dialog_detail_top_margin80"
                android:text="@string/minimum_photos_str"
                android:textColor="@color/shallow_grey"
                android:textSize="@dimen/grey_lato_regular_medium47" />

            <LinearLayout
                android:id="@+id/imagebutton_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/start_break_button_height168"
                android:layout_below="@+id/capture_info_text"
                android:layout_marginLeft="@dimen/dialog_detail_top_margin80"
                android:layout_marginRight="@dimen/dialog_detail_top_margin80" >

                <ImageButton
                    android:id="@+id/detail_imageButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/imagebutton"
                    android:src="@drawable/camera_info_icon" />

                <ImageButton
                    android:id="@+id/video_imageButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/imagebutton_spacing20"
                    android:layout_weight="1"
                    android:background="@drawable/imagebutton"
                    android:src="@drawable/road_block_icon" />

                <ImageButton
                    android:id="@+id/user_imageButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/imagebutton_spacing20"
                    android:layout_weight="1"
                    android:background="@drawable/imagebutton"
                    android:src="@drawable/user_with_tool_icon" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/capture_imageButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/start_break_button_height168"
                android:layout_below="@+id/imagebutton_layout"
                android:layout_marginLeft="@dimen/dialog_detail_top_margin80"
                android:layout_marginRight="@dimen/dialog_detail_top_margin80"
                android:layout_marginTop="@dimen/spinner_top_margin25"
                android:background="@drawable/red_background"
                android:src="@drawable/camera_plus_icon" />

            <ListView
                android:id="@+id/listview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/capture_imageButton" />
        </RelativeLayout>
    </LinearLayout>
    <!-- </ScrollView> -->

    <LinearLayout
        android:id="@+id/bottombutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/white_lato_regular_big79"
        android:layout_marginLeft="@dimen/white_lato_regular_big79"
        android:layout_marginRight="@dimen/white_lato_regular_big79" >

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height150"
            android:layout_weight="20"
            android:background="@drawable/grey_background"
            android:text="@string/save_2"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/dialog_black_lato_regular_small60" />

        <Button
            android:id="@+id/space"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:visibility="invisible" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height150"
            android:layout_gravity="center_vertical"
            android:layout_weight="20"
            android:background="@drawable/dark_grey_background"
            android:text="@string/leave_site_complete"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/dialog_black_lato_regular_small60" />
    </LinearLayout>

</RelativeLayout>